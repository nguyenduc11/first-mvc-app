@model List<Product>

@section title {
    <h3>Products</h3>
}

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Category?.Name</td>
                    <td>@Html.DisplayFor(m => product.Name)</td>
                    <td>@Html.DisplayFor(m => product.Price, "{0:c}")</td>
                    <td>@Html.DisplayFor(m => product.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products available.</p>
}
<br>
<a class="btn btn-primary" asp-controller="products" asp-action="add">Add</a>