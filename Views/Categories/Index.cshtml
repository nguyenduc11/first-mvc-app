@using MyApp.Models;
@addTagHelper *, Microsoft.AspNetCoreMvc.TagHelpers
@model List<Category>
@section title {
    <h3>Categories</h3>
    <br>
}

@if (Model != null && Model.Count()>0)
{
    <table class="table table-light table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model){
            <tr>               
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>
                    <a class="btn btn-warning" asp-controller="categories"
                    asp-action="edit"
                    asp-route-id="@category.CategoryId"
                    >Edit</a>
                </td>
                 <td>
                    <a class="btn btn-danger" 
                    onclick=confirmDelete()
                    asp-controller="categories"
                    asp-action="delete"
                    asp-route-id="@category.CategoryId"
                    >Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br>
<a class="btn btn-primary"
    asp-controller="categories"
    asp-action="add"
>Add</a>
}

@section Scripts{
    <script>
        console.log('hello from asp.net')
        function confirmDelete(){
            return confirm("delete?")
        }
    </script>
}

 
