@using MyApp.Models
@section title {
    <h3>Add Category</h3>
    <br>
}
@model Category


<form asp-controller="categories" asp-action="add" method="post">
    
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label">Name</label>
        </div>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Name">
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label">Description</label>
        </div>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Description">
        </div>
    </div>
    
    <div class="row mb-3">
        <input type="submit" class="btn btn-primary" value="Add">
    </div>
</form>
