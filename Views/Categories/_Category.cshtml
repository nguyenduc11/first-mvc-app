@model Category
@{
    string action = ViewBag.Action??string.Empty;   
}
<form asp-controller="categories" asp-action="@action" method="post">
    @if (action.ToLower() == "edit")
    {
        <input type="hidden" asp-for="CategoryId">
    }
    
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label">Name</label>
        </div>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Name">
        </div>
    </div>
    
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label">Description</label>
        </div>
        <div class="col-6">
            <input class="form-control" type="text" asp-for="Description">
        </div>
    </div>
    
    <div class="row mb-3">
        <input type="submit" class="btn btn-primary" value="Save">
    </div>
</form>